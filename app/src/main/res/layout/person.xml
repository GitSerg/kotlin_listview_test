<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/white">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorPrimary">
        <ImageView
                android:layout_width="56dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/abc_vector_test"
                android:id="@+id/person_back"
                android:scaleX="0.5" android:scaleY="0.5"/>
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/person_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" android:textColor="@color/black_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_marginTop="8dp"/>
    <TextView
            android:text="+7 (919) 456-3916"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/person_phone"
            app:layout_constraintTop_toBottomOf="@+id/person_name" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
            android:textColor="@color/text_can_be_clicked" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Choleric"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/person_temperament"
            app:layout_constraintTop_toBottomOf="@+id/person_phone" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
            android:textColor="@color/gray_text"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
    <TextView
            android:text="13.11.2001 - 29.07.2018"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/person_educationPeriod"
            app:layout_constraintTop_toBottomOf="@+id/person_temperament" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
            android:textColor="@color/gray_text"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Enim nostrud non proident pariatur laboris nostrud ipsum in elit quis et dolore"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/person_bio"
            app:layout_constraintTop_toBottomOf="@+id/person_educationPeriod" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
            android:textColor="@color/black_text"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>